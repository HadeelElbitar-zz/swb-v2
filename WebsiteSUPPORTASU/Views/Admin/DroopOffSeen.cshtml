@model WebsiteSUPPORTASU.Models.HRDroopOff

@{
    ViewBag.Title = "DroopOffHR";
    Layout = "~/Views/Shared/_AdminHR.cshtml";
}

<h2>DroopOffHR</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("AddDroopOffComments","Admin")) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>HRDroopOff</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.knowSupport)
        </div>
        <div class="editor-field">
				<textarea name="knowSupport" rows=20 cols=70>@Model.knowSupport</textarea>
            @Html.ValidationMessageFor(model => model.knowSupport)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OldResult)
        </div>
        <div class="editor-field">
            	<input class="input" type="text" name="OldResult" value="@Model.OldResult" readonly="readonly"/>
            @Html.ValidationMessageFor(model => model.OldResult)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Result)
        </div>
        <div class="editor-field">
            <select name="Result">
            <option></option>
                <option value="Accepted">Accepted</option>
                <option value="Rejected">Rejected</option>
            </select>
        </div>


        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
