@model WebsiteSUPPORTASU.Models.HRDroopOff
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@ViewBag.ERROR
<br />
<br />
@using (Html.BeginForm("FillForm", "Registration"))
{
    <fieldset>
        <legend >User LogOn</legend>
        
        <h4 class="label">
            FullName:*</h4>
        <input readonly="readonly" class="input" type="text" name="PaticipantName" value="@Model.PaticipantName"/>
        
        <h4 class="label">
            Email:*</h4>
        <input readonly="readonly" class="input" type="text" name="PaticipantEmail" value="@Model.PaticipantEmail"/>
        
        <h4 class="label">
            Barcode:*</h4>
        <input readonly="readonly" class="input" type="text" name="PaticipantBarcode" value="@Model.PaticipantBarcode"/>
        
        <h4 class="label">
            Did you know anything about “SUPPORT“? </h4>
        <textarea  class="input" type="textarea" name="knowSupport" rows="5" id="textarea">Keep Empty if NOT.</textarea>
        
        <h4 class="label">
            *What is the source of your information about “Droop Off” Conference?</h4>
        <div>
            <input name="HearedAbout" type="radio" value="Friend"/>Friend<br />
            <input name="HearedAbout" type="radio" value="Social" />Social Networks (Facebook, Twitter, ... etc)<br />
            <input name="HearedAbout" type="radio" value="Website" />Website<br />
            <input name="HearedAbout" type="radio" Value="Booth" />Booth<br />
        </div>
        
        <h4 class="label">
            *Why do you interested in attending “Droop Off” Conference?</h4>
        <textarea class="input" type="textarea" name="InterestedIn" rows="5" id="textarea"></textarea>
        
        <h4 class="label">
            *What are your expectations about the day?</h4>
        <textarea class="input" type="textarea" name="Expectations" rows="5" id="textarea"></textarea>
        
        <h4 class="label">
           *What are the reasons that will make you leave “Droop off” conference?</h4>
        <textarea class="input" type="textarea" name="Leave" rows="5" id="textarea"></textarea>
        
        
        <h6 style="margin-left: 15px">
            *Please note that all fields marked with * are required.</h6>
        <h6 style="margin-left: 15px">
            *Please note that your barcode will be sent to this email.</h6>
    </fieldset>
    <input class="submit" type="submit" name="submit" value="Done" />
}